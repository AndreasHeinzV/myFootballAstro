<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}


</head>
<body class="bg-mountains bg-cover bg-fixed"
      style="background: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.6)), url('{{ asset('images/Mountains.jpg') }}'); background-size: cover;)">
{% block header %}
    <a href="{{ path('leaguePage') }}">
        <button class="base-button" type="submit" name="page" value="index">Index
        </button>
    </a>
    {% if not app.user %}
        <a href="{{ path('register_page') }}">
            <button class="base-button" type="submit" name="page" value="register">Register</button>
        </a>

        <a href="{{ path('app_login') }}">
            <button class="base-button" type="submit" name="page" value="login">Login</button>
        </a>
        <a href="{{ path('app_forgot_password_request') }}">
            <button class="base-button" type="submit" name="page" value="password-failed">Reset Password</button>
        </a>


    {% else %}
        <a href="{{ path('app_logout') }}">
            <button class="base-button" type="submit" name="page" value="logout">Logout</button>
        </a>

        <a href="{{ path('favorite-page') }}">
            <button class="base-button" type="submit" name="page" value="favorites">Favorites</button>
        </a>

        <a href="{{ path('cart-page') }}">
            <button class="base-button" type="submit" name="page" value="cart">Cart</button>
        </a>


        <h1> Welcome: {{ app.user.firstName }}</h1>
    {% endif %}
{% endblock %}
{% block body %}{% endblock %}
</body>
</html>
